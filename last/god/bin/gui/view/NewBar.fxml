<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>


<VBox fx:id="sideBar" prefWidth="150.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.Controller.NewBar">
   <children>
      <VBox fx:id="sidePanel" maxHeight="1.7976931348623157E308" spacing="35.0" style="-fx-background-color: WHITE;">
         <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
         </padding>
         <clip>
            <Rectangle height="1000" width="200" />
         </clip>
         <children>
            <Text style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-fill: #333;" text="WELCOME" />
            <Button layoutX="30.0" layoutY="251.0" onAction="#GoToDashboard" prefHeight="38.0" prefWidth="138.0" style="-fx-background-color: linear-gradient(    to right,    #8DB9FF,    #D3C2FF,    #FFC1E8); -fx-background-radius: 5; -fx-padding: 10;" text="Dashboard">
               <font>
                  <Font name="System Bold Italic" size="12.0" />
               </font>
            </Button>
            <Button onAction="#GoToJoinSession" prefHeight="38.0" prefWidth="135.0" style="-fx-background-color: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 10;" text="Join Session" />
            <Button onAction="#GoToPrivateSession" prefHeight="38.0" prefWidth="138.0" style="-fx-background-color: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 10;" text="Join Private Session" />
            <Button onAction="#GoToCreateSession" prefHeight="38.0" prefWidth="147.0" style="-fx-background-color: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 10;" text="Create New Session" />
            <Button onAction="#GoToLogout" prefHeight="38.0" prefWidth="147.0" style="-fx-background-color: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 10;" text="LOG OUT" />
            <Region VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
   </children>
</VBox>
