<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="SidePanel" prefWidth="150.0" style="-fx-background-color: #2980b9;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.Controller.SideBarCTRL">

    <padding>
        <Insets bottom="20" left="10" right="10" top="20" />
    </padding>

    <children>
        <Region VBox.vgrow="ALWAYS" />
      <VBox fx:id="sidePanel" maxHeight="1.7976931348623157E308" prefHeight="647.0" prefWidth="166.0" style="-fx-background-color: linear-gradient(to bottom, #5a0db5 0%, #1f65d4 100%);                   -fx-background-radius: 0 15 15 0;                  -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 3);">
         <padding>
            <Insets bottom="30" left="15" right="15" top="30" />
         </padding>
         <children>
            <Region VBox.vgrow="ALWAYS" />
            <VBox alignment="CENTER" spacing="12">
               <children>
                  <Button fx:id="button1" onAction="#button1" style="-fx-background-color: white; -fx-text-fill: #1f65d4; -fx-font-weight: bold;                            -fx-background-radius: 8; -fx-pref-width: 130; -fx-pref-height: 38;                            -fx-font-size: 13;" text="Button 1" />
                  <Button fx:id="button2" onAction="#button2" style="-fx-background-color: white; -fx-text-fill: #1f65d4; -fx-font-weight: bold;                            -fx-background-radius: 8; -fx-pref-width: 130; -fx-pref-height: 38;                           -fx-font-size: 13;" text="Button 2" />
               </children>
            </VBox>
            <Region VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
    </children>
</VBox>
