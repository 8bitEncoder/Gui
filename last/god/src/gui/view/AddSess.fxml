<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<StackPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.Controller.AddSessCTRL">
   <children>
         
                  <!-- FORM CARD - DI TENGAH -->
         <VBox fx:id="card" alignment="CENTER" maxHeight="450.0" maxWidth="640.0" prefHeight="450.0" prefWidth="640.0" spacing="20" style="-fx-background-radius: 20; -fx-background-color: rgba(255,255,255,0.85); -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 20, 0, 0, 8); -fx-padding: 40 0 40 0;">
            <children>
               <Label fx:id="Label" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="ADD NEW SESSION" />
               <Label fx:id="Label2" alignment="CENTER" contentDisplay="CENTER" text="Please enter session details below " />
               <TextField fx:id="subjectField" maxWidth="251.0" prefHeight="38.0" prefWidth="251.0" promptText="Subject" style="-fx-background-color: #D8EEFF; -fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 0 15 0 15;" />
               <TextField fx:id="locationField" maxWidth="251.0" prefHeight="38.0" prefWidth="251.0" promptText="Location" style="-fx-background-color: #D8EEFF; -fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 0 15 0 15;" />
               <TextField fx:id="descriptionField" maxWidth="251.0" prefHeight="38.0" prefWidth="251.0" promptText="Description" style="-fx-background-color: #D8EEFF; -fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 0 15 0 15;" />
               <TextField fx:id="timeField" accessibleRole="DATE_PICKER" maxWidth="251.0" prefHeight="38.0" prefWidth="251.0" promptText="Time" style="-fx-background-color: #D8EEFF; -fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 0 15 0 15;" />
               <TextField fx:id="capacityField" accessibleRole="DATE_PICKER" layoutX="204.0" layoutY="316.0" maxWidth="251.0" prefHeight="38.0" prefWidth="251.0" promptText="Capacity" style="-fx-background-color: #D8EEFF; -fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 0 15 0 15;" />
               <Button fx:id="createButton" maxWidth="200" onAction="#createSession" prefHeight="45" prefWidth="200" style="-fx-background-color: linear-gradient(to right, #8DB9FF, #D3C2FF, #FFC1E8); -fx-background-radius: 8;" text="CREATE" textFill="WHITE">
                  <font>
                     <Font name="System Bold" size="14.0" />
                  </font>
               </Button>
            </children>
         </VBox>
   </children>
</StackPane>
