<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.Controller.JoinSessCTRL">
   <children>
         <!-- Welcome and Dashboard Section -->
         <VBox spacing="20" style="-fx-padding: 30;">
             
                            <!-- Header Section -->
             <VBox spacing="10">
                 <Label fx:id="Label" style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #555;" text="Available Sessions">
                     <font>
                         <Font size="26.0" />
                     </font>
                 </Label>
             </VBox>
             
                            <!-- Empty state message -->
             <VBox fx:id="emptyStateBox" alignment="CENTER" spacing="10" style="-fx-padding: 40; -fx-background-color: #f5f5f5; -fx-background-radius: 10;">
                 <Label fx:id="Label2" style="-fx-font-size: 18px; -fx-text-fill: #888;" text="No sessions available yet" />
                 <Button fx:id="refreshButton" onAction="#refreshSessions" style="-fx-background-color: linear-gradient(to right, #8DB9FF, #D3C2FF, #FFC1E8); -fx-text-fill: white; -fx-padding: 8 20;" text="Refresh Sessions" />
             </VBox>
         </VBox>
   </children>
</StackPane>
