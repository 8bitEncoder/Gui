<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.Controller.LogOutCTRL">
   <children>

                     <VBox fx:id="card" alignment="CENTER" maxHeight="450.0" maxWidth="627.0" prefHeight="450.0" prefWidth="800.0" spacing="30.0" style="-fx-background-radius: 20;                          -fx-background-color: rgba(255,255,255,0.85);                          -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 20, 0, 0, 8);">
   
                                  <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="ARE YOU LOGGING OUT?" />
               <Button fx:id="yes" maxWidth="200.0" onAction="#yes" prefHeight="60.0" prefWidth="100.0" style="-fx-background-color: linear-gradient(to right, #8DB9FF, #D3C2FF, #FFC1E8);" text="YES" textFill="WHITE">
                   <font>
                       <Font name="System Bold" size="12.0" />
                   </font>
               </Button>
               
                                                      <Button fx:id="no" maxWidth="200.0" onAction="#no" prefHeight="60.0" prefWidth="100.0" style="-fx-background-color: linear-gradient(to right, #8DB9FF, #D3C2FF, #FFC1E8);" text="NO" textFill="WHITE">
                   <font>
                       <Font name="System Bold" size="12.0" />
                   </font>
               </Button>

                     </VBox>
   </children>
</StackPane>
