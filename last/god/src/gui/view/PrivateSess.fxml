<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="card" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.Controller.PrivateSessCTRL">
   <children>
      <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #f5f5f5; -fx-padding: 40; -fx-background-radius: 20; -fx-alignment: center;">
         <children>
                 <Label fx:id="Label" alignment="CENTER" contentDisplay="CENTER" prefHeight="54.0" prefWidth="349.0" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #555;" text="Join Private Session">
               <font>
                  <Font size="26.0" />
               </font>
            </Label>
            <Label fx:id="Label2" alignment="CENTER" contentDisplay="CENTER" text="Please enter private session code below " />
            <TextField fx:id="privateSessionField" alignment="CENTER" maxHeight="80.0" maxWidth="251.0" minHeight="26.0" prefHeight="38.0" prefWidth="251.0" style="-fx-background-color: D8EEFF;" />
            <Button fx:id="joinButton" maxWidth="200.0" onAction="#createSession" prefHeight="46.0" prefWidth="200.0" style="-fx-background-color: linear-gradient(    to right,    #8DB9FF,    #D3C2FF,    #FFC1E8);" text="JOIN" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </children>
</StackPane>
